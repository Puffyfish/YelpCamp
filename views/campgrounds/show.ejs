<%- layout('layout/boilerplate')%>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-3">
      <img src="<%= campground.image%>" class="card-img-top img-fluid" alt="...">

      <div class="card-body">
        <h5 class="card-title"><%= campground.title%></h5>
        <p class="card-text"><%= campground.description%></p>
      </div>

      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campground.location %></li>
        <li class="list-group-item text-muted">$<%= campground.price %>/nigh</li>
      </ul>

      <div class="card-body">
        <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
        <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="post">
          <button class="card-link btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer text-muted">
        2 days ago
        <a href="/campgrounds">All Campgrounds</a>
      </div>
    </div>
    <form class="" action="index.html" method="post">
      <div class="mb-3">
        <label for=""></label>
        <input type="range" min="1" max="5" name="" value="">
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea class="form-control" name="review[body]" id="body"
        rows="3" cols="30"></textarea>
      </div>
    </form>
  </div>
</div>
